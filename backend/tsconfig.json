{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules"]
}